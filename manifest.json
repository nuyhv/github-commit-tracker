{
  "manifest_version": 3,
  "name": "GitHub Commit Tracker",
  "version": "1.0",
  "permissions": ["storage", "alarms", "scripting"],
  "host_permissions": ["https://github.com/*"],
  "background": {
    "service_worker": "src/background.ts"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["src/content.ts"]
    }
  ]
}
